@model IEnumerable<mijnZorgRooster.Models.DienstDTO>

@{
    ViewData["Title"] = "Index";
}

	<h2>Index</h2>

	<h2>Overzicht Alle Diensten</h2>

	<table class="table">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.DienstID)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Datum)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Beschrijving)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Begintijd)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Eindtijd)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.MinimaleBezetting)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.DienstID)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Datum)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Beschrijving)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Begintijd)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Eindtijd)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.MinimaleBezetting)
				</td>
				<td>
					<a asp-action="Details" asp-route-id="@item.DienstID">Details</a>
				</td>
			</tr>
		}
		</tbody>
	</table>
